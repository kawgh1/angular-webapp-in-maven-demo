/*
  This is a "Solution Style" tsconfig.json file, and is used by editors and TypeScriptâ€™s language server to improve development experience.
  It is not intended to be used to perform a compilation.

  To learn more about this file see: https://angular.io/config/solution-tsconfig.
*/
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "target/webapp",
    "paths": {
      "app/*": ["src/main/webapp/app/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/main/webapp1/main.ts",
    "src/main/webapp1/polyfills.ts",
    "src/main/webapp1/app"
  ],
  "exclude": [
    "node_modules"
  ]
}
